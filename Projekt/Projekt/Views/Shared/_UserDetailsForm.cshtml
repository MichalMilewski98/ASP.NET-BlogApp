@using System.Web.Mvc
@using FormMethod = Microsoft.AspNetCore.Mvc.Rendering.FormMethod
@model Projekt.Data.BlogUser
@{
    ViewData["Title"] = "Index";
}


@if (@Model.UserName != @Model.Email && ViewData.ModelState.IsValid)
{
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <td>Pesel</td>
            <td>Date of birth</td>
            <td>Username</td>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>@Html.DisplayFor(b => b.pesel)</td>
            <td>@Html.DisplayFor(b => b.dateOfBirth)</td>
            <td>@Html.DisplayFor(b => b.UserName)</td>
        </tr>
        </tbody>
    </table>
}



@using (Html.BeginForm("Save", "UserDetails", FormMethod.Post))
{

    <div class="row">
        <div class="col-md-4">
            <h4>Update your profile</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>PESEL</label>
                <input asp-for="pesel" class="form-control" />
                @Html.ValidationMessageFor(model => model.pesel, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Date of Birth</label>
                <input asp-for="dateOfBirth" id="datepicker" type="text" class="form-control" value="" />
                @Html.ValidationMessageFor(model => model.dateOfBirth, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label>Username</label>
                <input asp-for="UserName" class="form-control" />
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
            <form asp-action="Save">
                <input type="submit" value="Save" />
            </form>
        </div>
    </div>
}
